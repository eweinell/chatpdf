{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Streamlit: Launch Streamlit App",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "env": {"STREAMLIT_DEBUG": "1"},
            "args": [
                "run",
                "${workspaceFolder}/main.py"  // Replace with the path to your Streamlit app file
            ],
            "console": "integratedTerminal"
        }
    ]
}